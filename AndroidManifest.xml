<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eh.telerik.robotsocial"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />

    <uses-feature android:name="android.hardware.camera" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.eh.telerik.robotsocial.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.eh.telerik.robotsocial.ShareTextActivity"
            android:label="@string/title_share_text"
            android:parentActivityName="com.eh.telerik.robotsocial.MainActivity">
            
        </activity>
        <activity android:name="com.eh.telerik.robotsocial.SharePictureActivity"
            android:label="@string/title_share_picture"
            android:parentActivityName="com.eh.telerik.robotsocial.MainActivity">
            
        </activity>
    </application>

</manifest>
